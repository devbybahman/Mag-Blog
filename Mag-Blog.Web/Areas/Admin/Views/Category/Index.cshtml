@model List<Mag_Blog.CoreLayer.DTOs.Categories.CategoryDTO>

@{
    ViewData["Title"] = "دسته بندی ها";
    var counter = 1;
}

<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-action="Index" asp-controller="Category" asp-area="Admin" ><i class="fa fa-dashboard"></i> خانه</a>
        </li>
     
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section class="content">
    <a asp-area="Admin" asp-controller="Category" asp-action="Add">افزودن دسته بندی جدید</a>
    <div class="box box-primary">
        <div class="box box-body">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>#</tr>
                <tr>عنوان</tr>
                <tr>زیرگروه </tr>
                <tr>عملیات</tr>
                </thead>
                <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@cat.Title</td>
                        <td>@cat.ParentId</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Category" asp-action="" class="btn btn-info btn-sm" href="">ویرایش</a>
                            <a asp-area="Admin" asp-controller="Category" asp-action="" class="btn btn-danger btn-sm">حذف</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

</section>