@page
@using Mag_Blog.Web.Pages.Shared._AuthLayout
@model Mag_Blog.Web.Pages.Auth.Login

@{
    Layout = "Shared/_AuthLayout/_AuthLayout";
    ViewData["Title"] = "ورود";
}

<form method="Post" asp-page="Login">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" required="" id="username"/>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" required="" id="password"/>
    </div>
    <div>
        <input type="submit" value="@ViewData["Title"]"/>
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Register" >ثبت نام</a>
    </div>
</form>